server {
        listen 80;
        listen [::]:80 default_server;
        listen [::]:443 ssl ipv6only=on; # managed by Certbot
        listen 443 ssl; # managed by Certbot
        ssl_certificate /etc/letsencrypt/live/shopcek.com/fullchain.pem; # managed by Certbot
        ssl_certificate_key /etc/letsencrypt/live/shopcek.com/privkey.pem; # managed by Certbot
        include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
        ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

        root /var/www/html;

        index index.html index.htm index.nginx-debian.html;

        server_name shopcek.com;

        location / {
                # First attempt to serve request as file, then
                # as directory, then fall back to displaying a 404.
                try_files $uri /index.html;
        }

        location /docs {
                return 301 https://shopcek.gitbook.io/shopcek-or-shpc-1;

        }

        location /gtms {
                return 301 https://drive.google.com/file/d/1SiZHC31GHiOUSWj15yA6Ubn8ttqk26cE/view?usp=sharing;
        }

        location /deck {
#               return 301 https://drive.google.com/file/d/1nmO0O-bJRVzd-lcjClkr8rf3l78Ot8c2/view?usp=drive_link;
#                return 301 https://drive.google.com/file/d/1nmO0O-bJRVzd-lcjClkr8rf3l78Ot8c2/view?usp=drive_link;
#               return 301 https://drive.google.com/file/d/1xLipBDr4JpBLu4QvxOZYYNg8wu-_qvCn/view;
                return 301 https://drive.google.com/file/d/1ynJg9FZCFMdeDcJzfbRi4M2g78D-Mryg/view?usp=sharing;
        }

        # ~^/api(/?)(.*)        
        location /api {
                rewrite ^/api/?(.*)$ /$1 break;
                proxy_pass http://strapi;
                proxy_http_version 1.1;
                proxy_set_header X-Forwarded-Host $host;
                proxy_set_header X-Forwarded-Server $host;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_set_header X-Forwarded-Proto $scheme;
                proxy_set_header Host $http_host;
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection "Upgrade";
                proxy_pass_request_headers on;
        }



        # pass PHP scripts to FastCGI server
        #
        #location ~ \.php$ {
        #       include snippets/fastcgi-php.conf;
        #
        #       # With php-fpm (or other unix sockets):
        #       fastcgi_pass unix:/run/php/php7.4-fpm.sock;
