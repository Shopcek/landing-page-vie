          listen [::]:8000 ssl ipv6only=on; # managed by Certbot
        listen 8000 ssl; # managed by Certbot
        ssl_certificate /etc/letsencrypt/live/shopcek.com/fullchain.pem; # managed >
        ssl_certificate_key /etc/letsencrypt/live/shopcek.com/privkey.pem; # manage>
        include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
        ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

        location / {
                proxy_pass http://127.0.0.1:1337;
                proxy_http_version 1.1;
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection 'upgrade';
                proxy_set_header Host $host;
                proxy_cache_bypass $http_upgrade;
        }
